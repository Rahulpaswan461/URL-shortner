<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
       <h1>URL Shortener</h1>
       <% if(locals.id){ %> 
          <p>URL generated is : http://localhost:8001/url/<%=id %></p>
      <% } %> 
        <div>
             <form method="POST" action="/url">
                 <label>Enter Your Original URL</label>
                  <input type="text" 
                    name="url"
                    placeholder="https://example.com/"
                  />
                 <button type="submit">Generate URL</button>
             </form>

        </div>
        <% if(locals.url) {%>
             <table>
                <thead>
                   <th>S. No</th>
                   <th>Short Id</th>
                   <th>RedirectURL</th>
                   <th>Click</th>
                </thead>
                <tbody>
                    <% url.forEach((urls,index )=> { %>
                      <tr>
                         <td><%= index+1 %></td>
                         <td><%= urls.shortId %></td>
                         <td><%= urls.RedirectURL %></td>
                         <td><%= urls.visitHistory.length %></td>
                      </tr>
                    <% }) %>
                </tbody>
             </table>
          <% } %>
</body>
</html>